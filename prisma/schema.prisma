
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Utilisateur  {
  id Int @id @default(autoincrement())
  nom String
  email String @unique 
  password String @unique
  role Role @default(USER)
  post article[]
}
enum Role {
  ADMIN
  AUTHOR
  USER
}
model article {
  id  Int @id 
  titre String 
  contenu String
  image   String
  author  Utilisateur? @relation(fields: [authorId], references: [id])
  authorId  Int?
  creatdDT DateTime
  updateDt DateTime
  published Boolean
  cat  categorie? @relation(fields: [categorieId],references: [id])
  categorieId Int?
  commentaire comment[]
}
model categorie {
  id Int @id
  name String
  post article[]
}
model comment {
  id Int @id 
  email String @unique
  contenu String
  post article? @relation(fields: [artcleId],references: [id])
  artcleId Int?
  }



